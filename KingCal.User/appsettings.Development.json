{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": { "path": "~//user_log.txt" }
      }
    ]
  },
  "AppSettings": {
    "DB_NAME": "KingCal",

    // TODO
    // create DB User
    //"USERNAME": "microservicedev",
    //"PASSWORD": "micro_service4dev",

    "HOSTNAME": "(localdb)\\MSSQLLocalDB",
    "PORT": 1433
  }
}